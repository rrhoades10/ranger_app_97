<%- include('../partials/header.ejs', {title: 'All the Rangers'})  %>

<div class="container">
    <div class="row m-4"> 
        <h1 class="center-text">Collect All the Ragners and Defend the Universe!</h1>
    </div>  
    <div class="row">
        <% Object.keys(rangers).forEach(element => { %>
         <div class="card mx-auto" style="width: 20rem;">
            <img class="card-img-top" src="images/<%= element %>.jpg " alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title"><%= element %> Ranger</h5>
                <p class="card-text">The <%= element %> ranger's name is  <%= rangers[element] %>.</p>
                <a href="<%= element %>/ranger" class="btn btn-primary"><%= rangers[element] %> in Action!</a>
            </div>
        </div>
        <% }) %> 
    </div>
</div>


<%- include('../partials/footer.ejs')  %> 